<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

     <TextView
         android:id="@+id/textView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
         android:layout_marginLeft="20sp"
         android:layout_marginTop="10sp"
         android:text="Nombre"
         android:textSize="12sp" />
     
    <TextView
        android:id="@+id/tnombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="2sp"
        android:ems="10"
        android:text="@string/name"
        android:textSize="20sp" >

        <requestFocus />
     </TextView>
    
     <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/tnombre"
        android:layout_marginTop="20sp"
        android:text="Telefno"
        android:textSize="12sp" />
    
     <TextView
         android:id="@+id/ttelefono"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/textView1"
         android:layout_below="@+id/textView2"
         android:layout_marginTop="2sp"
         android:ems="10"
         android:text="@string/dir"
         android:textSize="20sp" />
    
     <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/ttelefono"
        android:layout_marginTop="20sp"        
        android:text="DirecciÃ³n" 
        android:textSize="12sp"/>
  
    <TextView
        android:id="@+id/tdireccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="2sp"
        android:ems="10"
        android:text="@string/correo"
        android:textSize="20sp" />
    
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_centerVertical="true"
        android:layout_below="@+id/tdireccion"
        android:layout_marginTop="20sp"
        android:text="Correo" 
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tcorreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="2sp"
        android:ems="10"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="44sp"
        android:text="Maps" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button3"
        android:layout_alignLeft="@+id/button2"
        android:text="Mail" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button3"
        android:layout_alignLeft="@+id/tcorreo"
        android:layout_marginBottom="30sp"
        android:layout_marginTop="10sp"
        android:text="Llamar" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button1"
        android:layout_alignBottom="@+id/tcorreo"
        android:layout_marginLeft="26sp"
        android:layout_toRightOf="@+id/button1"
        android:text="Mensaje" />

</RelativeLayout>