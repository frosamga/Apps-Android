<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center" >

     <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editnombre"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:text="Nombre" />
     
    <EditText
        android:id="@+id/editnombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
		android:layout_below="@+id/textView1"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/enombre" >

        <requestFocus />
     </EditText>
    
     <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edittelefono"
        android:layout_below="@+id/editnombre"
        android:layout_marginTop="26dp"
        android:text="Telefno" />
    
     <EditText
        android:id="@+id/edittelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editnombre"
        android:layout_below="@+id/textView2"
        android:ems="10"
        android:inputType="phone" />
    
     <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editdireccion"
        android:layout_below="@+id/edittelefono"
        android:layout_marginTop="26dp"        
        android:text="DirecciÃ³n" />
  
    <EditText
        android:id="@+id/editdireccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edittelefono"
        android:layout_below="@+id/textView3"
        android:ems="10"
        android:inputType="textPostalAddress" />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editcorreo"
        android:layout_centerVertical="true"
        android:layout_below="@+id/editdireccion"
        android:layout_marginTop="26dp"
        android:text="Correo" />

    <EditText
        android:id="@+id/editcorreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editdireccion"
        android:layout_below="@+id/textView4"
        android:ems="10"
        android:inputType="textEmailAddress" />
  

    <Button
        android:id="@+id/guardar"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editcorreo"
        android:layout_centerHorizontal="true"
        android:text="Guardar" />



</RelativeLayout>